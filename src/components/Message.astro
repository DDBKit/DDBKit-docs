---
interface Props {
	replyingToCommand?: string;
}
const { replyingToCommand, ...props } = Astro.props as Props;
---

<div class="message" {...props}>
	<h3 class="header">
		<div class="username">
			bot
		</div>
		<div class="badge">
			App
		</div>
		<div class="timestamp">
			Today at 12:00
		</div>
	</h3>
	<div class="message-content">
		<slot />
	</div>
</div>
<style>
	.message {
		display: flex;
		position: static;
		word-wrap: break-word;
		width: 100%;
		height: 100%;
		color: color-mix(
			in oklab,
			hsl(240 calc(1 * 5.263%) 7.451% /1) 100%,
			#000 0%
		);
	}
	.message-content {
		line-height: 1.375rem;
		font-size: 1rem;
		white-space: break-spaces;
		word-wrap: break-word;
		display: block;
		color: color-mix(
			in oklab,
			hsl(240 calc(1 * 3.226%) 93.922% /1) 100%,
			#000 0%
		);
		margin-inline-start: calc(40px + 16px + 16px);
		padding-inline-start: calc(40px + 16px + 16px);
	}
	.avatar {
		border-radius: 9999px;
		width: 40px;
		height: 40px;
	}
	.header {
		color: color-mix(
			in oklab,
			hsl(232.5 calc(1 * 3.883%) 59.608% /1) 100%,
			#000 0%
		);
		display: block;
		line-height: 1.375rem;
		min-height: 1.375rem;
	}
	:has(.badge):has(.username) {
		margin-inline-end: 0.25rem;
	}
	.badge {
		background: #5865f0;
		border-radius: 4px;
		height: 0.9375rem;
		padding: 0 0.275rem;
		margin-inline-start: 0.25rem;
		margin-top: 0.2em;
		font-size: 0.8rem;
		line-height: 0.9375rem;
		color: white;
		align-items: center;
		display: inline-flex;
		text-indent: 0;
		text-transform: uppercase;
	}
	.username {
		color: color-mix(
			in oklab,
			hsl(0 calc(1 * 0%) 98.431% /1) 100%,
			#000 0%
		);
		font-size: 1rem;
		display: inline;
		font-weight: 500;
		line-height: 1.375rem;
		overflow: hidden;
		vertical-align: baseline;
	}
	.timestamp {
		line-height: 1.375rem;
		color: color-mix(
			in oklab,
			hsl(233.333 calc(1 * 3.734%) 52.745% /1) 100%,
			#000 0%
		);
		font-size: 0.75rem;
		vertical-align: baseline;
		font-weight: 500;
		height: 1.25rem;
		display: inline-block;
	}
</style>
